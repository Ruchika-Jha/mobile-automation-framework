<?xml version="1.0" encoding="UTF-8"?>
<!--
    Log4j2 Configuration for Mobile Automation Framework
    This configuration enables detailed logging with file and console outputs
-->
<Configuration status="WARN" monitorInterval="30">

    <!-- Properties for configuring log file paths and patterns -->
    <Properties>
        <!-- Log file location -->
        <Property name="LOG_DIR">logs</Property>
        <!-- Log file name pattern -->
        <Property name="LOG_FILE">mobile-automation</Property>
        <!-- Log pattern with timestamp, level, class name, and message -->
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
        <!-- Console log pattern with colors for better readability -->
        <Property name="CONSOLE_PATTERN">%highlight{%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n}{FATAL=red, ERROR=red, WARN=yellow, INFO=green, DEBUG=cyan, TRACE=blue}</Property>
    </Properties>

    <!-- Appenders - Define where logs are written -->
    <Appenders>

        <!-- Console Appender - Outputs to console/terminal -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${CONSOLE_PATTERN}"/>
            <!-- Only show INFO and above in console -->
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>

        <!-- File Appender - Outputs all logs to a rolling file -->
        <RollingFile name="FileAppender"
                     fileName="${LOG_DIR}/${LOG_FILE}.log"
                     filePattern="${LOG_DIR}/${LOG_FILE}-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <!-- Roll over daily -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <!-- Roll over when file size reaches 10MB -->
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <!-- Keep maximum 30 log files -->
            <DefaultRolloverStrategy max="30"/>
        </RollingFile>

        <!-- Error File Appender - Separate file for errors only -->
        <RollingFile name="ErrorFileAppender"
                     fileName="${LOG_DIR}/${LOG_FILE}-error.log"
                     filePattern="${LOG_DIR}/${LOG_FILE}-error-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <!-- Only log ERROR and FATAL levels -->
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="5MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <!-- Test Execution Appender - Separate logs for test execution -->
        <RollingFile name="TestExecutionAppender"
                     fileName="${LOG_DIR}/test-execution.log"
                     filePattern="${LOG_DIR}/test-execution-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="15"/>
        </RollingFile>

    </Appenders>

    <!-- Loggers - Define logging behavior for different packages -->
    <Loggers>

        <!-- Framework package logger -->
        <Logger name="com.mobile.framework" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="ErrorFileAppender"/>
        </Logger>

        <!-- Test package logger -->
        <Logger name="com.mobile.tests" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="TestExecutionAppender"/>
            <AppenderRef ref="ErrorFileAppender"/>
        </Logger>

        <!-- Appium logger - Reduce verbosity of Appium logs -->
        <Logger name="io.appium" level="WARN" additivity="false">
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- Selenium logger - Reduce verbosity of Selenium logs -->
        <Logger name="org.openqa.selenium" level="WARN" additivity="false">
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- Apache HTTP Client logger - Reduce verbosity -->
        <Logger name="org.apache.http" level="WARN" additivity="false">
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- Root logger - Catches all other logs -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="ErrorFileAppender"/>
        </Root>

    </Loggers>

</Configuration>
